<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport"
    content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <title>
    <%= title %>
  </title>
</head>

<body>

  <title>
    <%= title %>
  </title>
  <style>
    table {
      width: 100%;
    }

    th,
    td {
      text-align: left;
      border: 1px solid #000;
      word-break: break-all;
      white-space: pre-line;
    }

    th {
      width: 25%;
    }
  </style>
  </head>

  <body>
    <%- include('./partials/user-header') %>

      <div class="container">
        <h1 style="text-align: center">
          <%= title %>
        </h1>
        <table class="table">
          <thead>
            <tr>
              <th style="text-align: center">Дата отправки</th>
              <th style="text-align: center">ФИО</th>
              <th style="text-align: center">Номер телефона</th>
              <th style="text-align: center">Описание проблемы</th>
            </tr>
          </thead>
          <tbody>
            <% notes.forEach(note=> { %>
              <tr>
                <td>
                  <%= new Date(note.creationDate).toLocaleString() %>
                </td>
                <td>
                  <%= note.fio %>
                </td>
                <td>
                  <%= note.phoneNumber %>
                </td>
                <td>
                  <%= note.descriptionProblem %>
                </td>

              </tr>
              <% }); %>
          </tbody>
        </table>
      </div>

      <script src="/app.js"></script>
  </body>

</html>